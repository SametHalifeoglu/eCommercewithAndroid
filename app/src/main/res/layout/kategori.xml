<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagekategori"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:alpha="3"
        android:foreground="@drawable/indicator_corner_bg"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtkategoriAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagekategori"
        android:layout_alignStart="@+id/imagekategori"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="37dp"
        android:fontFamily="casual"
        android:text="KategoriAdi"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
