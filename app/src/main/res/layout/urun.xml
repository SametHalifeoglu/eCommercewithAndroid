<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageurun"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="3"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:padding="3dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txturunadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageurun"
        android:layout_below="@+id/imageurun"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Ürün Adı"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtfiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txturunadi"
        android:layout_marginTop="39dp"
        android:text="Fiyat"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txturunaciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtfiyat"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-30dp"
        android:text="TextView"
        android:textSize="14sp" />

</RelativeLayout>